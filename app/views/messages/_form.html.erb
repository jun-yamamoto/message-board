<%= form_for @message,html: {class: 'form-horizontal'} do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <label for="name" class="col-sm-1">名前:</label>
  <div class="col-sm-11"><%= f.text_field :name,:class => "form-control" %></div>
</div>
  <div class="form-group">
  <label for="age" class="col-sm-1">年齢:</label>
  <div class="col-sm-11"><%= f.text_field :age,:class => "form-control" %></div>
  </div>
<div class="form-group">
  <label for="body" class="col-sm-1">内容:</label>
  <div class="col-sm-11"><%= f.text_area :body,:class => "form-control" %></div>
  </div>
  <div class="form-group">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>